<%= form_for @user do |f| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
      	<div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email %>
        </div>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password %>
        </div>
        <div class="actions">
        	<%= f.submit "edit" %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>