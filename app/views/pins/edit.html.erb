

<%= form_for ([current_user, @pin]) do |f| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
      	<div class="field">
    	    <%= f.label :title %><br />
    	    <%= f.text_field :title %>
        </div>
        <div class="field">
    	    <%= f.label :description %><br />
    	    <%= f.text_field :description %>
      	</div>
      	<div class="actions">
        	<%= f.submit "edit" %>
        </div>
      </div>
    </div>
  </div>
</div>        
<% end %>